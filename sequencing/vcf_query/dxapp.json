{
  "name": "vcf_query",
  "title": "Query VCF File",
  "summary": "Run vcf-query and output a bgzipped result",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "categories": ["Variation Calling"],
  "inputSpec": [
    {
      "name": "variants_vcfgzs",
      "label": "VCF File",
      "class": "array:file",
      "help": "Input VCF file in GZ format",
      "optional": false,
      "patterns": ["*.vcf.gz"]
    },
    {
      "name": "variants_vcfgztbis",
      "label": "VCF Index File",
      "class": "array:file",
      "help": "Input VCF index file in GZ format",
      "optional": false,
      "patterns": ["*.tbi"]
    },
    {
      "name": "query_str",
      "label": "Query String to bcftools query",
      "help": "fields to query from the VCF file in tab delimited format",
      "class": "string",
      "optional": false,
	  "default" : "%CHROM\\t%POS\\t%ID\\t%REF\\t%ALT\\t%QUAL\\t%INFO/QD\\t%INFO/AN\\t%INFO/AC[\\t%GT]\\n"
    },
    {
      "name" : "cat_results",
      "label" : "Concatenate Results",
      "help" : "Option to concatenate results?",
      "class" : "boolean",
      "optional" : false,
      "default" : false,
      "group" : "Concatenation Options"
    },
    {
      "name" : "prefix",
      "label" : "Prefix for concatenated result",
      "help" : "Prefix for the concatenated results file",
      "class" : "string",
      "optional" : true,
      "default" : "combined",
      "group" : "Concatenation Options"
    }
  ],
  "outputSpec": [
    {
      "name": "query_gz",
      "label": "Output of vcf-query (block compressed)",
      "class": "array:file"
    }
  ],
    "runSpec": {
    "distribution": "Ubuntu",
    "release": "14.04",
    "restartableEntryPoints": "all", 
    "interpreter": "bash",
    "file": "src/vcf_query.sh",
    "timeoutPolicy": {"*": { "hours": 72 }}
  },
  "regionalOptions": {
    "aws:us-east-1": {"systemRequirements": {"*": {"instanceType": "mem1_ssd2_x8"}},
                    "assetDepends": [{"id": "record-FGpf7zQ0kfbZxj6q4ZzQ2BPG"}]},
    "azure:westus": {"systemRequirements": {"*": {"instanceType": "azure:mem2_ssd1_x16"}},
                    "assetDepends": [{"id": "record-FGpfZ1j95qzXV43bP5y5JKgV"}]}
  },
  "openSource" : true,
  "details": {
    "whatsNew": ""
  }
}
